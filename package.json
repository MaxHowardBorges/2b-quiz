{
  "name": "equipe2b",
  "version": "1.0.0",
  "description": "Create .env.local file for each app with your environment parameters",
  "private": true,
  "workspaces": {
    "packages": ["backend-nest","frontend-vue"],
    "nohoist": ["**/vue", "**/vue**", "**/@nestjs/**", "**/@nestjs"]
    },
  "scripts": {
    "setup-bdd" : "cd ./backend-nest/ && docker-compose -f .\\docker-compose.dev.yaml up -d",
    "start-backend": "cd ./backend-nest/ && yarn typeorm:migrate && yarn start",
    "start-backend-prod": "cd ./backend-nest/ && yarn start:prod",
    "build-backend-prod": "cd ./backend-nest/ && yarn build",
    "start-frontend": "cd ./frontend-vue/ && yarn serve",
    "build-frontend-prod": "cd ./frontend-vue/ && yarn build",
    "docker:down": "cd ./backend-nest/ && docker-compose -f .\\docker-compose.dev.yaml down"
  }
}
